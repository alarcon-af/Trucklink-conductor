<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ConfirmarPedidoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombreCliente"
        android:text="@string/hello_blank_fragment"
        android:textSize="24sp"
        android:layout_marginTop="14dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/dark_green"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/detailImage"
        android:src="@drawable/truck"
        android:scaleType="fitXY"
        android:padding="8dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/carga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Carga"
            android:textColor="@color/dark_green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cargaPedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Carga"
            android:textColor="@color/dark_green"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/peso"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Peso"
            android:textColor="@color/dark_green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pesoPedido"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Peso"
            android:textColor="@color/dark_green"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/recolectar"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Direccion recolectar"
            android:textColor="@color/dark_green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recolectarPedido"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Direccion recolectar"
            android:textColor="@color/dark_green"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/entrega"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Direccion entregar"
            android:textColor="@color/dark_green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/entregaPedido"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Direccion entregar"
            android:textColor="@color/dark_green"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/precio"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Precio"
            android:textColor="@color/dark_green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/precioPedido"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Precio"
            android:textColor="@color/dark_green"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/confirmar"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_green"
            android:text="Confirmar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/cancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_green"
            android:text="Cancelar"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>